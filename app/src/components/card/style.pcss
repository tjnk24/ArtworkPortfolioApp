.Card{
    display: inline-block;
    margin: 10px;

    &:hover {
        filter: brightness(105%);
    }

    img {
        -webkit-box-shadow: 0px 10px 46px -23px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px 10px 46px -23px rgba(0,0,0,0.75);
        box-shadow: 0px 10px 46px -23px rgba(0,0,0,0.75);
    }
}
